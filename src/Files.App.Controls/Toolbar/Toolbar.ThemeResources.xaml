<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="using:Files.App.Controls"
	xmlns:muxc="using:Microsoft.UI.Xaml.Controls">

	<ResourceDictionary.MergedDictionaries>
		<XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
	</ResourceDictionary.MergedDictionaries>

	<ResourceDictionary.ThemeDictionaries>
		<ResourceDictionary x:Key="Default">
			<StaticResource x:Key="ToolbarBackgroundBrush" ResourceKey="CardBackgroundFillColorDefaultBrush" />
			<StaticResource x:Key="ToolbarBorderBrush" ResourceKey="CardStrokeColorDefaultBrush" />
			<StaticResource x:Key="ToolbarCornerRadius" ResourceKey="OverlayCornerRadius" />
			<Thickness x:Key="ToolbarInnerPadding">4</Thickness>
			<Thickness x:Key="ToolbarBorderThickness">1</Thickness>
			<x:Double x:Key="ToolbarItemSpacing">4</x:Double>
		</ResourceDictionary>

		<ResourceDictionary x:Key="HighContrast">
			<StaticResource x:Key="ToolbarBackgroundBrush" ResourceKey="SystemColorWindowColorBrush" />
			<StaticResource x:Key="ToolbarBorderBrush" ResourceKey="SystemColorButtonTextColorBrush" />
			<StaticResource x:Key="ToolbarCornerRadius" ResourceKey="OverlayCornerRadius" />
			<Thickness x:Key="ToolbarInnerPadding">4</Thickness>
			<Thickness x:Key="ToolbarBorderThickness">1</Thickness>
			<x:Double x:Key="ToolbarItemSpacing">4</x:Double>
		</ResourceDictionary>

		<ResourceDictionary x:Key="Light">
			<StaticResource x:Key="ToolbarBackgroundBrush" ResourceKey="CardBackgroundFillColorDefaultBrush" />
			<StaticResource x:Key="ToolbarBorderBrush" ResourceKey="CardStrokeColorDefaultBrush" />
			<StaticResource x:Key="ToolbarCornerRadius" ResourceKey="OverlayCornerRadius" />
			<Thickness x:Key="ToolbarInnerPadding">4</Thickness>
			<Thickness x:Key="ToolbarBorderThickness">1</Thickness>
			<x:Double x:Key="ToolbarItemSpacing">4</x:Double>
		</ResourceDictionary>
	</ResourceDictionary.ThemeDictionaries>

	<!--#region Toolbar Button Sizes-->
	<x:Double x:Key="ToolbarButtonSmallMinWidth">32</x:Double>
	<x:Double x:Key="ToolbarButtonSmallMinHeight">32</x:Double>

	<x:Double x:Key="ToolbarButtonMediumMinWidth">32</x:Double>
	<x:Double x:Key="ToolbarButtonMediumMinHeight">40</x:Double>

	<x:Double x:Key="ToolbarButtonLargeMinWidth">40</x:Double>
	<x:Double x:Key="ToolbarButtonLargeMinHeight">40</x:Double>
	<!--#endregion-->

	<!-- Acrylic эффект для Toolbar -->
	<SolidColorBrush x:Key="ToolbarAcrylicFallbackBrush" Color="#F3F3F3" />
	<AcrylicBrush x:Key="ToolbarAcrylicBackgroundBrush" BackgroundSource="HostBackdrop" TintColor="#CCFFFFFF" TintOpacity="0.6" FallbackSource="Brush" FallbackColor="#F3F3F3" />

</ResourceDictionary>
